{
    "info": {
        "name": "Money Tracker API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Create User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Accept",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Simon\",\n    \"email\": \"simon@example.com\",\n    \"password\": \"password\"\n}"
                },
                "url": {
                    "raw": "http://127.0.0.1:8000/api/users",
                    "protocol": "http",
                    "host": ["127", "0", "0", "1"],
                    "port": "8000",
                    "path": ["api", "users"]
                }
            }
        },
        {
            "name": "2. Create Wallet",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Accept",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"user_id\": 1,\n    \"name\": \"Savings Account\"\n}"
                },
                "url": {
                    "raw": "http://127.0.0.1:8000/api/wallets",
                    "protocol": "http",
                    "host": ["127", "0", "0", "1"],
                    "port": "8000",
                    "path": ["api", "wallets"]
                }
            }
        },
        {
            "name": "3. Add Income Transaction",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Accept",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"wallet_id\": 1,\n    \"type\": \"income\",\n    \"amount\": 1000.50\n}"
                },
                "url": {
                    "raw": "http://127.0.0.1:8000/api/transactions",
                    "protocol": "http",
                    "host": ["127", "0", "0", "1"],
                    "port": "8000",
                    "path": ["api", "transactions"]
                }
            }
        },
        {
            "name": "4. Add Expense Transaction",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Accept",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"wallet_id\": 1,\n    \"type\": \"expense\",\n    \"amount\": 250.00\n}"
                },
                "url": {
                    "raw": "http://127.0.0.1:8000/api/transactions",
                    "protocol": "http",
                    "host": ["127", "0", "0", "1"],
                    "port": "8000",
                    "path": ["api", "transactions"]
                }
            }
        },
        {
            "name": "5. View Wallet",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/wallets/1",
                    "protocol": "http",
                    "host": ["127", "0", "0", "1"],
                    "port": "8000",
                    "path": ["api", "wallets", "1"]
                }
            }
        },
        {
